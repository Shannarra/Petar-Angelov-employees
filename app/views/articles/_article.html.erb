<div id="<%= dom_id article %>" class="d-block">
  <h1 class="text-center h1">
    <%= article.title %>
  </h1>

  <p class="text-center h4">
    Posted <%= time_tag localized_creation_time(article) %>
  </p>

  <p>
    <%= article.content %>
  </p>

  <div>
    <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-primary'  %>
    <%= link_to "Back to articles", articles_path, class: 'btn btn-primary'  %> 
    <%= link_to 'Destroy this article', article_url(@article), method: :delete,
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?" },
        class: 'btn btn-danger' %>
  </div>


  <hr/>
  <p>
    <h3> <strong>Comments</strong> (<%= article.comments.count %>) </h3>

    <%= render 'comments', article: @article %>
  </p>
</div>
